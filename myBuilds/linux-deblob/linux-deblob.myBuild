	printf "\n\n==SELECT YOUR KERNEL IMAGE==\n\n"

	find arch -name zImage | cut -d "/" -f2
	find arch -name bzImage | cut -d "/" -f2

	read theArch

	checkResultImage "$theArch"

	if [ "$?" = "0" ]; then
		break
	fi
done

if [ -f "arch/${theArch}/boot/zImage" ]; then
printf "Copying %s\n" "arch/${theArch}/boot/zImage"
cp "arch/${theArch}/boot/zImage" "${SYSROOT}/boot/vmlinuz-linux-deblob"
fi

if [ -f "arch/${theArch}/boot/bzImage" ]; then
printf "Copying %s\n" "arch/${theArch}/boot/bzImage"
cp "arch/${theArch}/boot/bzImage" "${SYSROOT}/boot/vmlinuz-linux-deblob"
fi

make ARCH=$theArch CROSS_COMPILE=${TARGET}- INSTALL_MOD_PATH=${SYSROOT} modules_install
make ARCH=$theArch CROSS_COMPILE=${TARGET}- INSTALL_HDR_PATH=${SYSROOT}/usr headers_install

return "$?"
}

