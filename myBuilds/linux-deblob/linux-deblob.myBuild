cd "${myBuildExtractDest}/linux-deblob/${filename}/arch/"

#"$myBuildHome/extras/playGeorge.sh" "$myBuildHome" &

while true; do
	printf "\n\n==TYPE THE ARCHITECTURE==\n\n"

	find . -maxdepth 1 -type d | cut -c 3-

	read theArch

	checkResultFolder "$theArch"

	if [ "$?" = "0" ]; then
		break
	fi
done

cd "${myBuildExtractDest}/linux-deblob/${filename}/arch/${theArch}/configs"

while true; do
	printf "\n\n==TYPE THE DEFCONFIG==\n\n"

	find . -maxdepth 1 -type f | cut -c 3-

	read thedefconfig
	checkResultFile "$thedefconfig"

	if [ "$?" = "0" ]; then
		break
	fi
done

cd ${myBuildExtractDest}/linux-deblob/${filename}

cp arch/${theArch}/configs/${thedefconfig} ${myBuildExtractDest}/linux-deblob/${filename}/.config

printf "\n\n==Running make.==\n\n"

make ARCH=${theArch} CROSS_COMPILE=${BUILD}- oldconfig
	
if [ "${theArch}" = "x86_64" ] || [ "${theArch}" = "x86" ]; then
	make ARCH=$theArch CROSS_COMPILE=${TARGET}- bzImage modules
	return "$?"
else
	make ARCH=$theArch CROSS_COMPILE=${TARGET}- zImage modules dtbs
	return "$?"
fi

}

do_install(){
